include ./../layout.pug

block content
  h1 #{title}
  p
    a(href="/patrons/new").button Create New Patron
  table
    thead
      tr
        th Name
        th Address
        th Email
        th Library ID
        th Zip
    tbody
    for patron in patrons
      tr
        td
          a(href='/patrons/' + patron.id) #{patron.first_name} #{patron.last_name} 
        td #{patron.address} 
        td #{patron.email} 
        td #{patron.library_id} 
        td #{patron.zip_code} 
