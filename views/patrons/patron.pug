include ./../layout.pug

block content
  h1 Patron: #{patron.first_name} #{patron.last_name}
  form(action="/patrons/" + patron.id + "?_method=PUT", method="post")
    include patron_form.pug
    
  h2 Loan History
  table
    thead
      tr
        th Book
        th Patron
        th Loaned On
        th Return By
        th Returned On
        th Action
    tbody
     for loan in loans
      tr
        td
          a(href='/books/' + loan.Book.id) #{loan.Book.title} 
        td
          a(href='/patrons/' + patron.id) #{patron.first_name} #{patron.last_name} 
        td #{loan.loaned_on} 
        td #{loan.return_by} 
        td #{loan.returned_on}
        td 
          a(href='/books/return/' + patron.id).button Return Book 